extends layout 

block content 
    h1 Books 
    p 
        a(class="button", href="/books/new") Create New Book
    table 
        tr
            th Title 
            th Author 
            th Genre 
            th Year 
        each b in books 
            tr 
                td
                    a(href=`/books/${b.id}`)= b.title 
                td= b.author 
                td= b.genre 
                td= b.year